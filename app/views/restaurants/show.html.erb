<h2><%= @restaurant.name %></h2>

<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category.capitalize %></p>
<p>Rating: <%= @restaurant.rating %></p>
<p>Comment: <%= @restaurant.content %></p>

<h2>All reviews for <%= @restaurant.name %></h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <%= review.content %>
  <%= link_to "Delete", review_path(review), data: {turbo_method: :delete} %>
  <% end %>
</ul>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %><br>
<%= link_to "Back to list", restaurants_path(@restaurants) %>
